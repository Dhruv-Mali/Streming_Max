# Docker Environment Variables
# Copy this file to .env and fill in your values

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_change_this_in_production

# AWS SES (Email Service)
AWS_SES_USER_ACCESS_KEY=your_aws_access_key
AWS_SES_USER_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SES_REGION=us-east-1
SENDER_EMAIL=noreply@yourdomain.com

# AWS S3 (File Storage) - Optional
USE_S3=false
AWS_S3_ACCESS_KEY=your_s3_access_key
AWS_S3_SECRET_KEY=your_s3_secret_key
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=stremify-uploads
